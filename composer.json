{
    "name": "jasondmoss/composer-custom-installer",
    "type": "composer-plugin",
    "keywords": [
        "composer",
        "composer-plugin",
        "composer-installer"
    ],
    "version": "1.0.1",
    "description": "A composer plugin for installing packages to custom paths.",
    "license": "MIT",
    "authors": [
        {
            "name": "Mina Nabil Sami",
            "email": "mina.nsami@gmail.com",
            "homepage": "http://www.leaseweblabs.com/",
        },
        {
            "name": "Jason D. Moss",
            "email": "jason@jdmlabs.com",
            "homepage": "http://www.jdmlabs.com/",
            "role": "Senior Developer"
        }
    ],

    "minimum-stability": "dev",

    "require": {
        "php": ">=5.3.2",
        "composer-plugin-api": "*"
    },

    "autoload": {
        "psr-0": {
            "Composer\\CustomInstaller": "src/"
        }
    },

    "extra": {
        "class": [
            "Composer\\CustomInstaller\\LibraryPlugin",
            "Composer\\CustomInstaller\\PearPlugin"
        ]
    }
}
